import streamlit as st
import os
import platform

results_folder = "results"

st.markdown("### Open Results Folder")

if st.button("Open Folder"):
    if platform.system() == "Windows":
        os.startfile(os.path.abspath(results_folder))
    elif platform.system() == "Darwin":  # macOS
        os.system(f"open {os.path.abspath(results_folder)}")
    else:  # Linux
        os.system(f"xdg-open {os.path.abspath(results_folder)}")
